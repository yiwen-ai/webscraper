{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
